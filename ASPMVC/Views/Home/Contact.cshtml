@using ASPMVC.Models;
@model Contact;
@{
    string address = "Av. Jean Mermoz 18\n6041 Charleroi";
    string tel = "071 25 49 60";
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>
    <header>
        <h1>Technofutur TIC</h1>
        <nav>
            <ul>
                <li><a href="/">Accueil</a></li>
                <li><a href="/Register">S'enregistrer</a></li>
                <li><a href="/Login">Se connecter</a></li>
                <li><a href="/Home/Contact">Nous contacter</a></li>
            </ul>
        </nav>
    </header>
    <main>
        <section>
            <h1>Nous contacter</h1>
            <address>
                @Model.Address.Street @Model.Address.Number<br />
                @Model.Address.ZipCode @Model.Address.City<br />
                @Model.Address.Country
            </address>
            <a href="tel:@(Model.Phone.International+Model.Phone.Number.Replace(" ","").Substring(1))">@Model.Phone.Number</a>
        </section>
    </main>
    <footer>
        <p>Technofutur TIC - 2024/2025</p>
    </footer>
</body>
</html>